<table class="table table-hover">
  <thead>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
    <th></th>
    <th></th>
  </thead>
  <tbody>
    <% books.each do |book| %>
      <tr>
        <td>
          <%= link_to user_path(book.user) do %>
            <%= attachment_image_tag book.user, :profile_image, size: '40x40', fallback: 'no_image.png' %></td>
          <% end %>
        <td><%= link_to book.title, book_path(book) %></td>
        <td><%= book.body %></td>
        <td><%= render 'favorites/button', user: current_user, book: book %></td>
        <td>コメント数: <%= book.comments.count %></td>
      </tr>
    <% end %>
  </tbody>
</table>