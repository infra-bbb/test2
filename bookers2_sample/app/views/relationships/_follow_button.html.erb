<% if user != current_user %>
  <% if current_user.following?(user) %>
    <%= link_to 'フォロー外す', user_relationships_path(user), method: :delete, class: 'btn btn-sm btn-block btn-danger' %>
  <% else %>
    <%= link_to 'フォローする', user_relationships_path(user), method: :create, class: 'btn btn-sm btn-block btn-info' %>
  <% end %>
<% end %>