<div class="col-md-3">
	<%= render 'users/info', user: @user %>
	<div class="mt-4">
		<h2>New book</h2>
		<%= render 'books/form', book: @book %>
	</div>
</div>

<div class="col-md-8 offset-md-1">
  <h2><%= @page_name %> Users</h2>
  <% if @users.empty? %>
    <p>ユーザーはいません</p>
  <% else %>
    <%= render 'users/index', users: @users %>
  <% end %>
</div>