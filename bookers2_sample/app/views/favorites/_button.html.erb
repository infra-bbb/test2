<% if user.favorited?(book) %>
	<%= link_to book_favorites_path(book.id), method: :delete, class: 'fas fa-heart 2x text-danger' do %>
	  <%= book.favorites.count %>
	<% end %>
<% else %>
	<%= link_to book_favorites_path(book.id), method: :post, class: 'far fa-heart 2x' do %>
	  <%= book.favorites.count %>
	<% end %>
<% end %>