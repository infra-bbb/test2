<h2>User info </h2>
<%= attachment_image_tag user, :profile_image, :fill, 100, 100, size: '100x100', fallback: 'no_image.png' %>
<table class="table">
	<tbody>
		<tr>
			<td>name</td>
			<td><%= user.name %></td>
		</tr>
		<tr>
			<td>introduction</td>
			<td><%= user.introduction %></td>
		</tr>
		<tr>
			<td>follows</td>
			<td><%= link_to user.followings.count, user_following_path(user) %></td>
		</tr>
		<tr>
			<td>followers</td>
			<td><%= link_to user.followers.count, user_follower_path(user) %></td>
		</tr>
	</tbody>
</table>
<div class="mb-3">
	<%= link_to '', edit_user_path(user), class: 'btn btn-block btn-outline-secondary fas fa-user-cog' %>
</div>
<%= render 'relationships/follow_button', user: user %>