<h2>Bookers</h2>

<table>
  <thead>
    <th>Title</th>
    <th>Body</th>
    <th colspan='3'></th>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to 'Show', book_path(book) %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book_path(book) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h2>New Book</h2>
<%= form_with model:@book do |f| %>
  <div class="">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="">
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </div>
  <%=f.submit 'Create Book' %>
<% end %>